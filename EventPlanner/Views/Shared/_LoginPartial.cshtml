@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <li>
            @Html.ActionLink("Account", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>@Html.ActionLink("My Info", "Index", "Users")</li>
        if (User.IsInRole("Promoter"))
        {
            <li>@Html.ActionLink("My Events", "Events", "Promoter")</li>
        }
        else if (User.IsInRole("Attendee"))
        {
            <li> @Html.ActionLink("My Groups", "Groups", "Attendee")</li>
            <li>@Html.ActionLink("My Events", "Evebts", "Attendee")</li>
        }
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    }
}
else
{
    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
